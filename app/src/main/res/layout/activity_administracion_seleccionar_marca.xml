<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ultrablue"
    android:stretchColumns="1"
    >

    <TableLayout
        android:stretchColumns="*"
        android:scrollbarStyle="outsideInset"
        >
        <TableRow
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:layout_width="50dp" android:layout_height="50dp"
                android:layout_marginLeft="-40dp"
                android:id="@+id/textViewElegirMarca"
                android:gravity="left"
                android:text="SELECCIONA LA MARCA"
                android:textSize="20dp"
                android:layout_span="3"
                android:textColor="@color/icons" />

        </TableRow>


        <TableRow
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center">
            <Button
                android:layout_width="50dp" android:layout_height="50dp"
                android:background="@drawable/abarth"
                android:id="@+id/buttonAbarth"
                />
            <Button
                android:layout_width="50dp" android:layout_height="50dp"
                android:background="@drawable/alfaromeo"
                android:id="@+id/buttonAlfaromeo" />
            <Button
                android:layout_width="50dp" android:layout_height="50dp"

                android:background="@drawable/audi1"
                android:id="@+id/buttonAudi"
                android:nestedScrollingEnabled="true" />

            <Button
                android:layout_width="50dp" android:layout_height="50dp"

                android:background="@drawable/bmw"
                android:id="@+id/buttonBmw" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center" >

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/chevrolet"
                android:id="@+id/buttonChevrolet" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/citroen"
                android:id="@+id/buttonCitroen" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dacia"
                android:id="@+id/buttonDacia" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/daewoo"
                android:id="@+id/buttonDaewoo" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center" >

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/daihatsu1"
                android:id="@+id/button12" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/fiat1"
                android:id="@+id/button13" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ford"
                android:id="@+id/button14" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/honda1"
                android:id="@+id/button15" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center" >

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/hyundai"
                android:id="@+id/buttonHyundai" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/jaguar"
                android:id="@+id/buttonJaguar" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/jeep"
                android:id="@+id/buttonJeep" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/kia"
                android:id="@+id/buttonKia" />
        </TableRow>

    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_column="22"
            android:weightSum="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                android:layout_span="3"
                android:layout_weight="7.85"
                android:text="SIGUIENTE" />
        </TableRow>
    </TableRow>
</TableLayout>