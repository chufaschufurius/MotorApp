<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chufaschin.mockupstallerizate.VersionAdministracion.NuevoVehiculo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/ultrablue"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/arrowBack"
            android:layout_weight="0.03"
            android:src="@drawable/arrowback"
            android:background="@color/ultrablue"
            android:onClick="lanzarMatriculaExiste"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATOS NUEVO VEHICULO:"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_weight="0.03"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewApp"
        android:id="@+id/textView12"
        android:textSize="@android:dimen/app_icon_size"
        android:textAppearance="@style/Base.Widget.AppCompat.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGUIENTE"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.71"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:onClick="lanzarSeleccionarMarca" />

    <LinearLayout
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView12"
        android:weightSum="1"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODELO:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="70dp"
                android:id="@+id/textView13"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:selectAllOnFocus="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce el modelo..."
                android:id="@+id/textView15"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView"
                android:src="@drawable/accountsearch"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/resultadosBusqueda"
                android:layout_toRightOf="@+id/resultadosBusqueda"
                android:layout_toEndOf="@+id/resultadosBusqueda"
                android:layout_marginLeft="45dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANO"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="100dp"
                android:id="@+id/textView14"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:selectAllOnFocus="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce el ano..."
                android:id="@+id/textView16"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView2"
                android:src="@drawable/accountsearch"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/resultadosBusqueda"
                android:layout_toRightOf="@+id/resultadosBusqueda"
                android:layout_toEndOf="@+id/resultadosBusqueda"
                android:layout_marginLeft="70dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATRICULA"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="50dp"
                android:id="@+id/textView17"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:selectAllOnFocus="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce la matricula..."
                android:id="@+id/textView18"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView3"
                android:src="@drawable/accountsearch"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/resultadosBusqueda"
                android:layout_toRightOf="@+id/resultadosBusqueda"
                android:layout_toEndOf="@+id/resultadosBusqueda"
                android:layout_marginLeft="35dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOTOR"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="80dp"
                android:id="@+id/textView19"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:selectAllOnFocus="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce el motor..."
                android:id="@+id/textView20"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:autoText="true"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView4"
                android:src="@drawable/accountsearch"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/resultadosBusqueda"
                android:layout_toRightOf="@+id/resultadosBusqueda"
                android:layout_toEndOf="@+id/resultadosBusqueda"
                android:layout_marginLeft="55dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEUMATICOS"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="40dp"
                android:id="@+id/textView21"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:selectAllOnFocus="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce los neumaticos.."
                android:id="@+id/textView22"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView5"
                android:src="@drawable/magnify"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/resultadosBusqueda"
                android:layout_toRightOf="@+id/resultadosBusqueda"
                android:layout_toEndOf="@+id/resultadosBusqueda"
                android:layout_gravity="right"
                android:layout_marginLeft="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLIENTE"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="70dp"
                android:id="@+id/textView23"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:selectAllOnFocus="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce el cliente..."
                android:id="@+id/textView24"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView6"
                android:src="@drawable/accountsearch"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/resultadosBusqueda"
                android:layout_toRightOf="@+id/resultadosBusqueda"
                android:layout_toEndOf="@+id/resultadosBusqueda"
                android:layout_marginLeft="55dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.51">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTROS"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="80dp"
                android:id="@+id/textView25"
                android:background="@color/primary_dark"
                android:textColor="#000000"
                android:shadowColor="#ffffff" />

            <EditText
                android:selectAllOnFocus="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Otra informacion..."
                android:id="@+id/textView26"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:layout_marginRight="5dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


</RelativeLayout>
