<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chufaschin.mockupstallerizate.NuevoCliente"
    android:background="@color/primary">

    <!--<Spinner-->
        <!--android:id="@+id/spinner5"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" -->
        <!--/>-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark" >

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewApp"
        android:id="@+id/textView3"
        android:textSize="@android:dimen/app_icon_size"
        android:textAppearance="@style/Base.Widget.AppCompat.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGUIENTE"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.71" />

    <LinearLayout
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView3">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNI:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="70dp"
                android:id="@+id/dni"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:text="Resultados de Busqueda"
                android:id="@+id/resultadosBusqueda"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:layout_weight="1" />

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/buscarDni"
                android:src="@drawable/accountsearch"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/resultadosBusqueda"
                android:layout_toRightOf="@+id/resultadosBusqueda"
                android:layout_toEndOf="@+id/resultadosBusqueda" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="70dp"
                android:id="@+id/nombre"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce el nombre..."
                android:id="@+id/introducirNombre"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APELLIDOS:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="100dp"
                android:id="@+id/apellidos"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="-45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce el apellido..."
                android:id="@+id/introduceApellidos"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-MAIL"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="50dp"
                android:id="@+id/email"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce el email..."
                android:id="@+id/introduceEmail"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MARCA"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="80dp"
                android:id="@+id/marca"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce la marca..."
                android:id="@+id/introduceMarca"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:autoText="true"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/buscarMarca"
                android:src="@drawable/accountsearch"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/resultadosBusqueda"
                android:layout_toRightOf="@+id/resultadosBusqueda"
                android:layout_toEndOf="@+id/resultadosBusqueda" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODELO"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="40dp"
                android:id="@+id/modelo"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce el modelo..."
                android:id="@+id/introduceModelo"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buscarModelo"
                android:src="@drawable/accountsearch"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/resultadosBusqueda"
                android:layout_toRightOf="@+id/resultadosBusqueda"
                android:layout_toEndOf="@+id/resultadosBusqueda" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="MATRICULA"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="70dp"
                android:id="@+id/matricula"
                android:background="@color/primary_dark"
                android:textColor="#000000" />

            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="-20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce la matricula..."
                android:id="@+id/introduceMatricula"
                android:layout_alignTop="@+id/dni"
                android:layout_alignLeft="@+id/resultadosBusqueda"
                android:layout_alignStart="@+id/resultadosBusqueda"
                android:layout_alignRight="@+id/resultadosBusqueda"
                android:layout_alignEnd="@+id/resultadosBusqueda"
                android:background="@color/primary_dark"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
