<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_administracion"
    tools:context="com.example.chufaschin.mockupstallerizate.Administracion">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NUEVO CLIENTE"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:background="@color/primary_dark"
            android:textColor="@color/accent"
            android:onClick="lanzarNuevoCliente" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NUEVO VEHICULO"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:textColor="@color/primary_dark"
            android:background="@color/accent"
            android:onClick="lanzarNuevoVehiculo" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADMINISTRAR TAREAS"
            android:id="@+id/button"
            android:layout_weight="0.25"
            android:background="@color/primary_dark"
            android:textColor="@color/accent" />

        <Button
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:text="CALENDARIO"
            android:id="@+id/button3"
            android:layout_weight="0.25"
            android:textColor="@color/primary_dark"
            android:background="@color/accent" />

    </LinearLayout>
</RelativeLayout>
